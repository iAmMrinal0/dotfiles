# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# Multimedia keys playback control
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# KB shortcuts when audio keys are unavailable
bindsym Control+$mod+mod1+Up exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym Control+$mod+mod1+Down exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym Control+$mod+mod1+m exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# Brightness controls
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

# Emacs
